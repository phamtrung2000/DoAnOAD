                        <TextBlock x:Name="txtNgay1" Text="5/1" FontSize="20" TextAlignment="Center" Foreground="#FF1443E3" Height="30"/>
                        <TextBlock x:Name="txtThu1" Text="Th3" FontSize="20" TextAlignment="Center" Foreground="#FF1443E3" Height="30"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnNgay2" Height="100" Width="110" Margin="5,5,5,5" Style="{StaticResource MaterialDesignRaisedDarkButton}" Background="AliceBlue" Click="btnNgay2_Click">
